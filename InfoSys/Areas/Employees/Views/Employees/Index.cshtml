@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-secondary">All Employees</h1>
<br />
<div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <th>Employee No</th>
                    <th>Photo</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Designation</th>
                    <th>City</th>
                    <th>Joined</th>
                    <th></th>
                </thead>
                <tbody>
                    @foreach(var employee in Model)
                    {
                        <tr>
                            <td>@employee.EmployeeNumber</td>
                            <td>
                                <img alt="image" src="@Url.Content(employee.ImageUrl)" class="rounded-circle" height="70" width="70"/>
                            </td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.Phone</td>
                            <td>@employee.Email</td>
                            <td>@employee.Gender</td>
                            <td>@employee.Designation</td>
                            <td>@employee.City</td>
                            <td>@employee.DateJoined.ToShortDateString()</td>
                            <td>
                                <div class="btn-group btn-sm" role="group">
                                    <a asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-outline-info btn-sm" >Detail</a>
                                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-success btn-sm" >Edit</a>
                                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
   
</div>

